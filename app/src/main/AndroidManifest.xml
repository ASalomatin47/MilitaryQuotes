<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salomatin.alex.militaryquotes">

    <application
        android:allowBackup="true"
        android:icon="@drawable/quote"
        android:label="@string/app_name"
        android:roundIcon="@drawable/quote"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity" android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name=".music.MusicService"
            android:enabled="true"/>

        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">

        </activity>
    </application>

    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>